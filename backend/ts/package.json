{
  "name": "server",
  "version": "0.2.0",
  "description": "",
  "author": "Ing. Yasmany Santalla Pereda",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build-core": "nest build core",
    "start-core": "nest start core",
    "core": "node dist/apps/core/apps/core/src/main.js",
    "start-core:dev": "nest start --watch",
    "start-core:debug": "nest start --debug --watch",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/core/test/jest-e2e.json"
  },
  "dependencies": {
    "@casl/ability": "^6.1.1",
    "@casl/mongoose": "^7.1.0",
    "@nestjs/apollo": "^10.1.0",
    "@nestjs/bull": "^0.6.1",
    "@nestjs/common": "^9.0.11",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.11",
    "@nestjs/graphql": "^10.0.20",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/platform-express": "^9.0.11",
    "@nestjs/terminus": "^9.1.1",
    "apollo-server-core": "^3.10.2",
    "apollo-server-express": "^3.10.2",
    "bull": "^4.9.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "graphql": "^16.6.0",
    "ioredis": "^5.2.3",
    "mongodb": "^4.9.1",
    "mongoose": "^6.5.4",
    "mongoose-cast-aggregation": "^0.3.1",
    "mongoose-delete": "^0.5.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.2",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.0.11",
    "@types/bull": "^3.15.9",
    "@types/jest": "27.5.2",
    "@types/node": "^18.7.15",
    "@types/supertest": "^2.0.12",
    "@types/ua-parser-js": "^0.7.36",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.1.4",
    "ts-jest": "28.0.3",
    "ts-loader": "^9.2.3",
    "ts-morph": "^15.1.0",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "~4.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@app/common": "<rootDir>/libs/common/src",
      "@app/mongo-graphql-crud/(.*)": "<rootDir>/libs/mongo-graphql-crud/src/$1",
      "@app/mongo-graphql-crud": "<rootDir>/libs/mongo-graphql-crud/src",
      "@app/nestjs-casl/(.*)": "<rootDir>/libs/nestjs-casl/src/$1",
      "@app/nestjs-casl": "<rootDir>/libs/nestjs-casl/src"
    }
  }
}
